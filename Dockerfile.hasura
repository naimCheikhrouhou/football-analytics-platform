FROM hasura/graphql-engine:v2.36.0

# Hasura configuration is done via environment variables
# Metadata and migrations should be mounted as volumes or
# managed via Hasura CLI

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:8080/healthz || exit 1

